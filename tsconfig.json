{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "build"
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
